<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_cardview"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/colorWhite"
    android:padding="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/notification_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="notificaton header"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/notification_body"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:text="notificaton headerajfhjkafklajhfkjhakjfdjafkjahfjkajfhkafhkjahfkjhafjhajfhkjahfkjhakjfhkjahfkjhakjfhkahfhkjhkajhfkahkfjhk"
            android:textSize="14sp"
            android:layout_alignTop="@+id/notification_header"
            android:layout_marginTop="24dp"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/notification_time"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_alignTop="@+id/notification_body"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="42dp"
            android:gravity="bottom"
            android:textSize="14sp"
            android:text="afdaf"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>